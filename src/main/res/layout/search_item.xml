<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="@dimen/search_icon_56"
        android:layout_height="match_parent"
        android:contentDescription="@string/search_name"
        android:scaleType="center"
        android:tint="?attr/colorControlNormal" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/search_icon_56"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/search_key_line_8"
        android:paddingLeft="@dimen/search_key_line_8"
        android:paddingEnd="@dimen/search_key_line_8"
        android:paddingRight="@dimen/search_key_line_8">

        <TextView
            android:id="@+id/search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:textIsSelectable="false"
            android:textSize="@dimen/search_text_14" />

        <TextView
            android:id="@+id/search_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:textIsSelectable="false"
            android:textSize="@dimen/search_text_12" />

    </LinearLayout>

</LinearLayout>